<div class="container">

	

	<div class="row">
		<div class="col-xs-6 col-xs-offset-3">
			<h1>Editing Book</h1>

			<%= form_with model:@book, url: book_path(@book), method: :patch do |f| %>
				<h4>Title</h4>
				<%= f.text_field :title %>
				<h4>Opinion</h4>
				<%= f.text_area :body %>
				<%= f.submit "Update Book" %>
			<% end %>
			<%= link_to "Show", book_path(@book.id) %>
			|
			<%= link_to "Back", books_path %>

		</div>
	</div>
</div>
